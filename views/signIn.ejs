<div class="w-100 h-100 d-flex justify-content-center align-items-center">
  <form
    action="/create-session"
    method="POST"
    class="col-11 col-md-9 col-lg-5 p-4 m-4 shadow rounded bg-light"
  >
    <!-- Heading -->
    <div class="text-center mb-4">
      <h1 style="color: #333; font-weight: 700; font-size: 1.8rem">Login</h1>
    </div>

    <!-- Email Input -->
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="email"
        required
      />
    </div>

    <!-- Password Input -->
    <div class="mb-4">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        id="password"
        required
      />
    </div>

    <!-- Submit Button -->
    <div class="d-grid gap-2">
      <button
        type="submit"
        class="btn btn-primary btn-block"
        style="background-color: #b92b27; border-color: #b92b27"
      >
        Login
      </button>
    </div>

    <!-- Sign Up Link -->
    <div class="text-center mt-3">
      <p style="color: #555">
        Don't have an account?
        <a href="/sign-up" style="color: #b92b27; text-decoration: none"
          >Sign Up</a
        >
        instead.
      </p>
    </div>
  </form>
</div>
