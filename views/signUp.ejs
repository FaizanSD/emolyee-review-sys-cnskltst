<div class="d-flex justify-content-center align-items-center" style="">
  <form
    action="/create-account"
    method="POST"
    class="col-11 col-md-9 col-lg-5 p-4 mt-4 shadow rounded bg-light"
    style="border: 1px solid #e1e8ed"
  >
    <!-- Heading -->
    <div class="text-center mb-4">
      <h1 style="color: #1da1f2; font-weight: 800; font-size: 1.8rem">
        Sign Up
      </h1>
    </div>

    <!-- Name Input -->
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" name="name" id="name" required />
    </div>

    <!-- Email Input -->
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="email"
        required
      />
    </div>

    <!-- Role Select -->
    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <select class="form-select" name="role" aria-label="Role" required>
        <option value="Employee">Employee</option>
        <option value="Admin">Admin</option>
      </select>
    </div>

    <!-- Password Input -->
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        id="password"
        required
      />
    </div>

    <!-- Confirm Password Input -->
    <div class="mb-4">
      <label for="cnf_password" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        name="cnf_password"
        id="cnf_password"
        required
      />
    </div>

    <!-- Submit Button -->
    <div class="d-grid gap-2">
      <button
        type="submit"
        class="btn btn-primary btn-block"
        style="background-color: #1da1f2; border-color: #1da1f2"
      >
        Sign Up
      </button>
    </div>

    <!-- Sign In Link -->
    <div class="text-center mt-3">
      <p style="color: #657786">
        Already have an account?
        <a href="/" style="color: #1da1f2; text-decoration: none">Sign In</a>
        instead.
      </p>
    </div>
  </form>
</div>
