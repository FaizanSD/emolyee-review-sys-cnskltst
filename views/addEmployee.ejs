<div class="w-100 h-100 d-flex justify-content-center align-items-center">
  <form
    action="/dashboard/admin/createEmployee"
    method="POST"
    class="col-11 col-md-7 col-lg-5 p-3 mt-4 shadow rounded fw-semibold"
    style="background-color: #f0f2f5; color: #050505"
  >
    <!-- Heading -->
    <div class="text-center mb-4">
      <h1 style="color: #1877f2">Add Employee</h1>
    </div>

    <!-- Name Input -->
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" name="name" id="name" required />
    </div>

    <!-- Email Input -->
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="email"
        required
      />
    </div>

    <!-- Password Input -->
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        id="password"
        required
      />
    </div>

    <!-- Confirm Password Input -->
    <div class="mb-4">
      <label for="cnf_password" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        name="cnf_password"
        id="cnf_password"
        required
      />
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <button
        type="submit"
        class="btn btn-primary"
        style="background-color: #1877f2; border-color: #1877f2"
      >
        Add Employee
      </button>
    </div>
  </form>
</div>
